{
	"name": "AdSandbox",
	"version": "0.2",
	"description": "Just Sandboxing",
	"manifest_version": 2,
	"browser_action": {
		"default_icon": "icon.png",
		"zdefault_popup": "popup.html"
	},
	"web_accessible_resources": [
		"content_scripts/bind.js"
	],
	"permissions": [
		"storage",
		"activeTab",
		"tabs",
		"background",
		"http://*/*",
		"https://*/*"
	],
	"background": {
		"scripts": [
			"init.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*",
				"file://*/*"
			],
			"js": [
				"content_scripts/bind.js"
			]
		}
	],
	"content_security_policy": "script-src 'self' https:* 'unsafe-inline'; object-src 'self'"
}